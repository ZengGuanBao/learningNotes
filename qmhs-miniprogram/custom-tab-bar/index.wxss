/**tabar.wxss**/
.tab-content {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 60%);
  padding-bottom: 10rpx;
  z-index: 998;
}

.tab-bar {
  margin: 0 20rpx;
  width: 710rpx;
  height: 90rpx;
  display: flex;
  z-index: 2;
}

.img {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 5rpx;
}

.text-con {
  font-size: 20rpx;
  font-weight: 400;
  line-height: 20rpx;
}

.tab-bar-radius {
  border-radius: 90rpx;
}

.tab-bar-icon {
  width: 550rpx;
  height: 90rpx;
  display: flex;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-share {
  position: absolute;
  width: 140rpx;
  height: 90rpx;
  top: 0;
  right: 20rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;

}

.text-golden {
  color: #FFE2C1
}

.text-white {
  color: #fff
}

.text-gray {
  color: rgba(255, 255, 255, 0.4);
}

.share-button {
  position: absolute;
  top: 0;
  left: 0;
  width: 140rpx;
  height: 90rpx;
  overflow: hidden;
  background-color: transparent;
}

.share-btn {
  display: inline-block;
  padding: 45rpx 70rpx;
  background-color: transparent;
}

.popup-show {
  display: none;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  z-index: 3;
  background: rgba(0, 0, 0, 0.7);
  background-position: top, bottom;
  background-size: 100% 92px;
  background-repeat: no-repeat;
  transform: translateZ(0);
}

.share-icon {
  position: fixed;
  bottom: 0;
  z-index: 4;
  width: 100%;
  height: 299rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 16rpx 16rpx 0px 0px;
}

.item-icon {
  width: 88rpx;
  height: 88rpx;
  margin: 40rpx 0 16rpx;
}

.item-type {
  padding: 0;
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  line-height: 24rpx;
  height: 208rpx;
  background-color: #fff;
}

.item-type .btn-text {
  color: #333 !important;
}

.iphonex-bottom {
  padding-bottom: 68rpx !important;
}
