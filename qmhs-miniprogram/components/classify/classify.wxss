/**commodityList.wxss**/
.classify-view {
  position: relative;
}

.classify-block {
  white-space: nowrap;
  height: 88rpx;
  display: flex;
  background-color: #fff;
}

.block-item {
  display: inline-block;
  height: 88rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 88rpx;
  padding: 0 30rpx;
  text-align: center;
}

.block-item:last-child {
  padding-right: 132rpx;
}

.block-img {
  position: absolute;
  top: 0;
  right: 0;
  width: 102rpx;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}

.block-img .img {
  width: 88rpx;
  height: 88rpx;
  margin-right: 14rpx;
}

.block-active {
  color: #FD4073;
  font-weight: 600;
}

.classify-mask-block {
  position: fixed;
  top: -1280rpx;
  left: 0;
  z-index: 4;
  width: 100%;
}

.classify-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  background-color: #fff;
  text-align: center;
  padding: 28rpx 0 18rpx;
  position: relative;
}

.close {
  position: absolute;
  top: 22rpx;
  right: 21rpx;
  width: 44rpx;
  height: 44rpx;
}

.classify-tabar {
  background-color: #fff;
  position: relative;
  overflow: hidden;
  padding-top: 20rpx;
  top: -1rpx;
}

.tabar-item {
  display: inline-block;
  width: 150rpx;
  height: 54rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  border-radius: 54rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 54rpx;
  margin: 0 0 30rpx 30rpx;
  text-align: center;
}

.tabar-active {
  color: #fff;
  background: linear-gradient(90deg, rgba(253, 64, 115, 1) 0%, rgba(255, 59, 96, 1) 100%);
  border-color: transparent;
}

.classify-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  z-index: 3;
  background: rgba(0, 0, 0, 0.7);
  background-position: top, bottom;
  background-size: 100% 92px;
  background-repeat: no-repeat;
  transform: translateZ(0);
}

.mask-none {
  display: none;
}