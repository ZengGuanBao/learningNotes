/**authentication.wxss**/
.authentication-container{
    height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
    background: #F7F8FC;
}
.form-block{
    padding: 0 40rpx;
    background: #fff;
    border-radius: 8rpx;
}
.form-block .form-line{
    display: flex;
    height: 120rpx;
    align-items: center;
    color: #333;
    font-size: 32rpx;
}
.form-block .form-line+.form-line{
    border-top: 1rpx solid #eee;
}
.form-block .form-line .line-right{
    flex: 1;
}
.ipt-name, .ipt-idCard{
    height: 120rpx;
    line-height: 120rpx;
    font-size: 32rpx;
    color: #333;
    text-align: right;
}
.placeholder{
    color: #999;
}
.notice{
    padding: 0 30rpx;
    margin-top: 50rpx;
}
.notice .header .img-error{
    width: 26rpx;
    height: 26rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.notice .header{
    color: #333;
    font-size: 26rpx;
    margin-bottom: 24rpx;
}
.notice .title{
    display: inline-block;
}
.notice-item{
    margin-top: 17rpx;
    color: #999;
    font-size: 24rpx;
}
.operation{
    padding: 120rpx 30rpx 0;
}
.btn-authentication{
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    background:linear-gradient(90deg,rgba(253,64,115,1) 0%,rgba(255,59,96,1) 100%);
    border-radius: 44rpx;
}
.btn-authentication.disabled{
    opacity:0.49;
}
