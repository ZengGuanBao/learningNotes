/**coupon.wxss**/
.coupon-container {}

.coupon-item {
  width: 670rpx;
  height: 224rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  display: flex;
  padding: 30rpx 20rpx 20rpx;
  margin: 0 20rpx 20rpx;
}

.coupon-item:nth-of-type(1) {
  margin-top: 20rpx;
}

.coupon-img {
  margin-right: 20rpx;
}

.coupon-time {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
}

.tips {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(253, 64, 115, 1);
  line-height: 36rpx;
  margin: 21rpx 0 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.btn {
  float: right;
  width: 136rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(90deg, rgba(253, 64, 115, 1) 0%, rgba(255, 59, 96, 1) 100%);
  border-radius: 27rpx;
}