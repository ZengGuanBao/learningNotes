/**editAddress.wxss**/
.edit-address-container{
    height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
    background: #F7F8FC;
}
.input-form{
    border-radius: 8rpx;
    background: #fff;
    padding: 0 35rpx;
}
.form-item:not(:last-child){
    position: relative;
    border-bottom: 1rpx solid #eee;
}
.form-item input, .form-item textarea{
    height: 100rpx;
    line-height: 100rpx;
    color: #333;
    font-size: 32rpx;
    box-sizing: border-box;
}
.form-item textarea{
    width: 100%;
    height: 166rpx;
    resize: none;
    line-height: 40rpx;
    padding:34rpx 0;
}
.icon-arrow{
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    top: 50%;
    right: 15rpx;
    transform: translateY(-50%);
}
.placeholder{
    color: #999;
}
.submit-form{
    padding: 120rpx 30rpx 0 30rpx;
}
.btn-save{
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: linear-gradient(90deg,rgba(253,64,115,1) 0%,rgba(255,59,96,1) 100%);
    border-radius: 44rpx;
    font-weight:600;
    color: #fff;
    font-size: 32rpx;
}
.btn-save.disabled{
    opacity: 0.49;
}
