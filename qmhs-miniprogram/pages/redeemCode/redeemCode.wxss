/**redeemCode.wxss**/
.redeemCode-container {
    padding: 160rpx 50rpx 0;
    background-color: #fff;
  }
  
  .title {
    font-size: 48rpx;
    font-weight: 600;
    color: rgba(51, 51, 51, 1);
    line-height: 48rpx;
    margin-bottom: 130rpx;
  }
  
  .invitees-code {
    position: relative;
    border-bottom: 1px solid #eee;
  }
  
  .invitees-input {
    position: relative;
    height: 100rpx;
    font-size: 40rpx;
    color: #333;
    z-index: 0;
  }
  .del-x-icon {
    position: absolute;
    top: 20rpx;
    right:0;
    width: 60rpx;
    height: 60rpx;
    z-index: 1;
  }
  .img{
    width: 60rpx;
    height: 60rpx;
  }
  .placeholder-input {
    font-size: 40rpx;
    font-weight: 400;
    color: rgba(204, 204, 204, 1);
    line-height: 40rpx;
  }
  
  .input-tip {
    text-align: right;
    margin-top: 20rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #FD2A63;
    line-height: 24rpx;
  }
  
  .invitees-btn {
    width: 650rpx;
    height: 88rpx;
    background:linear-gradient(90deg,rgba(253,64,115,1) 0%,rgba(255,59,96,1) 100%);
    border-radius: 44rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    line-height: 88rpx;
    opacity: 0.5;
    margin-top: 228rpx;
  }
  
  .btn-active {
    opacity: 1;
  }