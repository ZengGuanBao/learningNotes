/**taskDescription.wxss**/
.task-description-container{
    padding: 20rpx;
    height: 100vh;
    box-sizing: border-box;
    background: #F7F8FC;
}
.desc{
    padding: 0 20rpx 20rpx;
    background: #fff;
    border-radius: 8rpx;
}
.title{
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    text-align: center;
    padding-top: 40rpx;
    margin-bottom: 40rpx;
}
.decs-content{
    color: #333;
    font-size: 24rpx;
    line-height: 36rpx;
    margin-bottom: 20rpx;
}
.note{
    font-size: 20rpx;
    color: #999;
    line-height: 30rpx;
    margin-bottom: 20rpx;
}
.sub-title{
    font-size: 26rpx;
    font-weight:600;
    color: #333;
    line-height: 26rpx;
    margin-bottom: 20rpx;
}
