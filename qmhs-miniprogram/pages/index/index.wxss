.ad-img {
  width: 345rpx;
  height: 136rpx;
}

.category-fixed {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  height: 100rpx;
  background-color: #fff;
  z-index: 2;
}
.category{
  width: 100%;
  height: 80rpx;
}
.category-scroll {
  white-space: nowrap;
  display: flex;
}
.commodity-contain{
  min-height: calc(100vh - 100rpx);
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.category-type {
  display: inline-block;
  position: relative;
  width: 112rpx;
  height: 80rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 100rpx;
  text-align: center;
}

.category-active {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.tab-line {
  position: absolute;
  top: 76rpx;
  left: 44rpx;
  width: 28rpx;
  height: 4rpx;
  background: linear-gradient(90deg, rgba(253, 64, 115, 1) 0%, rgba(255, 59, 96, 1) 100%);
  border-radius: 2rpx;
}

.footer-loading {
  height: 88rpx;
  margin: 30rpx 0;
  text-align: center;
}

.loading-more {
  width: 88rpx;
  height: 88rpx;
}

.footer {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #ccc;
  text-align: center;
}

.line {
  display: inline-block;
  width: 20rpx;
  border-bottom: 1px solid #ccc;
  position: relative;
  top: -5rpx;
  margin: 0 10rpx;
}
