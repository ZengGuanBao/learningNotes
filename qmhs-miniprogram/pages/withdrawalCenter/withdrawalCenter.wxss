/**withdrawalCenter.wxss**/
.withdrawal-center-container{
    background: #fff;
}
.withdrawal-card{
    padding: 20rpx 30rpx 40rpx;
}
.withdrawal-card .wrapper{
    position: relative;
    height: 260rpx;
}
.withdrawal-card .wrapper .img-bg{
    position:absolute;
    width: 690rpx;
    height: 260rpx;
    top: 0;
    right: 0;
}
.withdrawal-card .explain{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    color: #AA6C27;
    font-size: 20rpx;
    z-index: 3;
}
.withdrawal-card .explain .icon-question{
    width: 20rpx;
    height: 20rpx;
    vertical-align: middle;
    margin-left: 4rpx;
}
.withdrawal-card .money{
    position: relative;
    padding: 68rpx 0 20rpx 0;

    color: #AA6C27;
    font-size: 72rpx;
    font-weight: 500;
    text-align: center;
    z-index: 2;
}
.withdrawal-card .money-text{
    position: relative;
    color: #AA6C27;
    font-size: 24rpx;
    text-align: center;
    z-index: 2;
}
.apply-withdrawal{
    position: absolute;
    width: 150rpx;
    height: 64rpx;
    bottom: 55rpx;
    right: 0;
    line-height: 64rpx;
    text-align: center;
    color: #AA6C27;
    font-size: 28rpx;
    background: rgba(255,255,255,0.34);
    border-radius: 100rpx 0 0 100rpx;
    z-index: 3;
}
.record-title{
    padding-left: 30rpx;
    padding-bottom: 30rpx;
    font-size: 32rpx;
    color: #333;
    font-weight:600;
}
.record-type-tab{
    display: flex;
    padding: 0 36rpx;
    background: #F7F8FC;
    border-radius: 16rpx 16rpx 0 0;
}
.record-type-tab .tab-item{
    flex: 1;
    line-height: 90rpx;
    color: #999;
    font-size: 26rpx;
    text-align: center;
}
.record-type-tab .tab-item.active{
    font-weight:600;
    color: #333;
}
.tab-list-content{
    height: calc(100vh - 482rpx);
    padding: 0 20rpx;
    box-sizing: border-box;
    background: #F7F8FC;
}
.record-item{
    display: flex;
    height: 228rpx;
    align-items: center;
    padding: 0 40rpx 0 30rpx;
    background: #fff;
    border-radius: 8rpx;
}
.withdrawal{
    height: 160rpx;
}
.record-item:not(:last-child){
    margin-bottom: 20rpx;
}
.record-item .item-left{
    flex: 1;
    padding-right: 10rpx;
    color: #333;
    font-size: 24rpx;
}
.record-item .item-left .type{
    display: inline-block;
    padding: 3rpx 6rpx;
    border: 1rpx solid transparent;
    border-radius:4px;
    margin-bottom: 12rpx;
}
.record-item .item-left .type.pink{
    color: #FD4073;
    border-color: #FD4073;
}
.record-item .item-left .type.yellow{
    color: #C67D35;
    border-color: #C67D35;
}
.record-item .item-left .type.green{
    color: #31C75F;
    border-color: #31C75F;
}
.record-item .item-left .type.gray{
    color: #CCCCCC;
    border-color: #CCCCCC;
}
.record-item .item-left .no{
    margin: 10rpx 0;
}
.record-item .item-right .reward{
    color: #333;
    font-size: 40rpx;
}
.record-empty{
    text-align: center;
    padding-top: 151rpx;
}
.img-empty{
    width: 200rpx;
    height: 200rpx;
}
.empty-text{
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    color: #999;
    font-size: 26rpx;
}
