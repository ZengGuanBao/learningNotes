/**incomeDetails.wxss**/
.income-details-container{
    height: 100vh;
    overflow: auto;
}
.income-type-tab{
    position: relative;
    display: flex;
    padding: 0 70rpx 22rpx;
    height: 110rpx;
    box-sizing: border-box;
    background: #FD4073;
}
.income-type-tab .tab-item{
    position: relative;
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: rgba(255,255,255,0.6);
    font-size: 26rpx;
}
.income-type-tab .tab-item.active{
    color: #fff;
    font-weight: 600;
}
.income-type-tab .tab-item.active::before{
    content: '';
    position: absolute;
    width: 28rpx;
    height: 4rpx;
    bottom: 16rpx;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    border-radius: 2rpx;
}
.income-type-tab .info{
    position: absolute;
    top: 21rpx;
    right: 20rpx;
}
.income-type-tab .info .text{
    color: #FFFFFF;
    font-size: 20rpx;
}
.income-type-tab .info .icon-question{
    width: 20rpx;
    height: 20rpx;
    margin-left: 8rpx;
    vertical-align: middle;
}
.tab-content{
    position: relative;
    border-radius: 16rpx 16rpx 0 0;
    margin-top: -22rpx;
    z-index: 2;
    overflow: hidden;
}
.income-origin{
    position: relative;
    background: #fff;
    padding: 0 20rpx;
}
.income-origin .note{
    position: absolute;
    right: 20rpx;
    bottom: -40rpx;
    font-size: 20rpx;
    color: #A75331;
}
.time-tab, .filter-time-tab{
    display: flex;
}
.time-tab .tab-item, .filter-time-tab .tab-item{
    position: relative;
    flex: 1;
    line-height: 88rpx;
    text-align: center;
    color: #999;
    font-size: 26rpx;
}
.time-tab .tab-item.active, .filter-time-tab .tab-item.active{
    color: #333;
    font-weight: 600;
}
.filter-time-tab .tab-item .text{
    vertical-align: middle;
}
.filter-time-tab .tab-item .icon-arrow{
    width: 12rpx;
    height: 8rpx;
    vertical-align: middle;
    margin-left: 8rpx
}
.time-tab .tab-item.active::before{
    content: '';
    position: absolute;
    width: 28rpx;
    height: 4rpx;
    bottom: 19rpx;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(90deg,rgba(253,42,99,1) 0%,rgba(245,37,77,1) 100%);
    border-radius: 2rpx;
}
.income-table .table-header{
    background: #FFF4EF;
    border-radius: 8rpx 8rpx 0 0;
}
.income-table .tr{
    display: flex;
    align-items: center;
    text-align: center;
    color: #A75331;
    font-size: 26rpx;
}
.income-table .tr .td:nth-child(1){
    flex: 3;
}
.income-table .table-body .tr .td:nth-child(1){
    text-align: left;
    text-indent: 50rpx;
}
.income-table .tr .td:nth-child(2){
    flex: 3;
}
.income-table .tr .td:nth-child(3){
    flex: 4;
}
.income-table .table-header .tr{
    height: 80rpx;
}
.income-table .table-body .tr{
    height: 90rpx;
}
.income-table .table-body .tr:nth-child(2n){
    background: #FFFBFB;
}
.income-table .img-report{
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
    vertical-align: middle;
}
.income-table text{
    vertical-align: middle;
}
.income-detail .title{
    padding: 50rpx 0 20rpx 20rpx;
    color: #333;
    font-size: 32rpx;
    font-weight: 600;
    background: #fff;
}
.income-filter-tab{
    position: relative;
    display: flex;
    height: 88rpx;
    align-items: center;
    border-radius: 16rpx 16rpx 0 0;
    z-index: 2;
    background: #F7F8FC;
    overflow: hidden;
}
.income-filter-tab .tab-item{
    flex: 1;
    height: 100%;
    line-height: 88rpx;
    text-align: center;
    color: #333;
    font-size: 26rpx;
}
.income-filter-tab .tab-item.active{
    color: #FD4073;
}
.income-filter-tab .tab-item .text{
    vertical-align: middle;
}
.income-filter-tab .tab-item .icon-arrow{
    width: 12rpx;
    height: 8rpx;
    vertical-align: middle;
    margin-left: 8rpx
}
.filter-list{
    padding: 0 20rpx 20rpx;
    background: #F7F8FC;
}
.order-item{
    padding: 0 20rpx;
    background: #fff;
    border-radius: 8rpx;
    color: #999;
    font-size: 26rpx;
    line-height: 26rpx;
}
.order-item+.order-item{
    margin-top: 20rpx;
}
.order-item .order-header{
    display: flex;
    height: 88rpx;
    align-items: center;
}
.order-item .order-header .img-type{
    width: 26rpx;
    height: 26rpx;
    vertical-align: middle;
}
.order-item .order-header .order-no{
    display: inline-block;
    vertical-align: middle;
    margin-left: 10rpx;
}
.copy{
    display: inline-block;
    width: 48rpx;
    line-height: 26rpx;
    background:#F7F8FC;
    margin-left: 10rpx;
    border-radius:2px;
    font-size: 20rpx;
    color: #333;
    text-align: center;
    vertical-align: middle;
}
.order-item .order-content{
    display: flex;
    height: 180rpx;
    box-sizing: border-box;
    align-items: center;
}
.order-item .order-content .order-left{
    border-radius: 8rpx;
    overflow: hidden;
}
.order-item .order-content .order-right{
    flex: 1;
    min-width: 0;
    margin-left: 20rpx;
}
.goods-detail{
    color: #333;
    line-height: 40rpx;
}
.order-time{
    margin: 24rpx 0;
}
.order-item .order-footer{
    display: flex;
    height: 86rpx;
    align-items: center;
}
.cash-back-text{
    color: #333;
}
.cash-back{
    color: #FD4073;
    font-size: 32rpx;
    margin: 0 8rpx;
}
.cash-back-type{
    display: inline-block;
    line-height: 26rpx;
    padding: 0 6rpx;
    color: #FD4073;
    font-size: 18rpx;
    background: rgba(255,242,245,0.85);
    border-radius: 4rpx;
}
.order-status{
    flex: 1;
    text-align: right;

}
.order-empty{
    text-align: center;
    padding-top: 60rpx;
}
.img-empty{
    width: 200rpx;
    height: 200rpx;
}
.empty-text{
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    color: #999;
    font-size: 26rpx;
}
