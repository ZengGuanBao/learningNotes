/**orderDetail.wxss**/
.orderDetail-container{
    height: 100vh;
    background: #F7F8FC;
    overflow: auto;
}
.order-header{
    position: relative;
    height: 245rpx;
}
.order-header .img-bg{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
}
.order-status{
    position: relative;
    padding: 47rpx 0 0 40rpx;
    color: #fff;
    font-size: 40rpx;
    font-weight: 600;
    z-index: 2;
}
.order-content{
    position: relative;
    padding: 0 20rpx 100rpx;
    margin-top: -100rpx;
    z-index: 1;
}
.order-content::before{
    content: '';
    position: absolute;
    width: 730rpx;
    height: 30rpx;
    top: -15rpx;
    left: 10rpx;
    background: #C60E40;
    border-radius: 8rpx;
    opacity: 0.44;
}
.logistics-box, .goods-box, .detail-box{
    position: relative;
    background: #fff;
    border-radius: 8rpx;
    margin-bottom: 23rpx;
}
.logistics-box{
    border-radius: 0 0 8rpx 8rpx;
    padding: 0 40rpx;
    color: #333;
    font-size: 26rpx;
}
.logistics-box .status, .logistics-box .user-info{
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 40rpx 0;
}
.logistics-status{
    max-width: 500rpx;
    display: inline-block;
}
.logistics-box .status{
    border-bottom: 1rpx solid #eee;
}
.logistics-box .icon-car, .logistics-box .icon-location{
    width: 34rpx;
    height:34rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}
.logistics-box .line+.line{
    margin-top: 10rpx;
}
.user-name{
    margin-right: 30rpx;
}
.logistics-time, .user-location{
    color: #999;
    padding-left: 52rpx;
}
.logistics-box .icon-arrow{
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    right: 5rpx;
    top: 50%;
    transform: translateY(-50%);
}
.goods-box{
    display: flex;
    height: 180rpx;
    padding: 40rpx 33rpx 40rpx 20rpx;
    align-items: center;
}
.goods-box .goods-right{
    flex: 1;
    min-width: 0;
    width: 180rpx;
    height: 180rpx;
    margin-left: 20rpx;
}
.goods-detail{
    height: 80rpx;
    font-size: 26rpx;
    color: #333;
    line-height: 40rpx;
    margin-bottom: 52rpx;
}
.goods-price .price{
    position: relative;
    font-size: 34rpx;
    color: #FD4073;
    padding-left: 24rpx;
}
.goods-price .price::after{
    content: 'ï¿¥';
    position: absolute;
    top: 10rpx;
    left: 0;
    color: #FD4073;
    font-size: 24rpx;
}
.detail-box{
    padding: 0 40rpx;
}
.detail-box .line{
    display: flex;
    height: 90rpx;
    align-items: center;
    color: #999;
    font-size: 26rpx;
}
.detail-box .line+.line{
    border-top: 1rpx solid #eee;
}
.detail-box .line-right{
    color: #333;
    margin-left: 30rpx;
}
.detail-box .price{
    color: #FD4073;
}
.order-footer{
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 2;
    background: #fff;
}
.order-footer .wrapper{
    display: flex;
    justify-content: flex-end;
    height: 70rpx;
    padding: 15rpx 20rpx;
}
.order-footer .btn{
    width: 250rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    border-radius :35rpx;
    font-size: 32rpx;
    font-weight:600;
    border: 1rpx solid #999;
    background: #fff;
    color: #999;
}
.order-footer .btn-receipt{
    color: #fff;
    background: linear-gradient(90deg,rgba(253,64,115,1) 0%,rgba(255,59,96,1) 100%);
    margin-left: 30rpx;
    border: none;
}
