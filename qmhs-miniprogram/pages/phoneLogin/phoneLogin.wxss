/**phoneLogin.wxss**/
.phone-login-container{
    height: 100vh;
    padding: 120rpx 50rpx 0;
    box-sizing: border-box;
    background: #fff;
}
.title{
    color: #333;
    font-weight: 600;
    font-size: 48rpx;
    line-height: 48rpx;
}
.login-form{
    margin-top: 130rpx;
}
.login-form .form-item{
    position: relative;
    border-bottom: 1rpx solid #eee;
}
.login-form .form-item+.form-item{
    margin-top: 30rpx;
}
.login-form .ipt-phone, .login-form .ipt-sms{
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 35rpx;
}
.login-form .ipt-phone{
    width:589rpx;
}
.delete{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    z-index: 10;
}
.img-delete{
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.login-form .ipt-sms{
    width: 500rpx;
}
.btn-sms{
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    color: #FD2A63;
    font-size: 30rpx;
}
.submit-form{
    margin-top: 150rpx;
}
.btn-login{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: linear-gradient(90deg,rgba(253,64,115,1) 0%,rgba(255,59,96,1) 100%);
    border-radius: 44rpx;
    font-weight:600;
    color: #fff;
    font-size: 32rpx;
}
.btn-save.disabled{
    opacity: 0.49;
}
.disabled{
    opacity: 0.49;
}
.placeholder{
    color: #ccc;
}
.agree-protocol{
    margin-top: 35rpx;
    text-align: center;
    color: #999999;
    font-size: 24rpx;
}
.agree-protocol .protocol{
    color: #FD4073;
}
