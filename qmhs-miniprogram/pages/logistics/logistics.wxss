/**logistics.wxss**/
.logistics-container{
    height: 100vh;
    background: #F7F8FC;
    overflow: auto;
}
.logistics-header{
    position: relative;
    height: 245rpx;
    padding: 32rpx 0 0 40rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #fff;
}
.logistics-header .img-bg{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
}
.delivery-no, .delivery-company{
    position: relative;
    z-index: 2;
    font-size: 26rpx;
    line-height: 26rpx;
}
.delivery-no .text, .delivery-company .text{
    display: inline-block;
    opacity: 0.6;
    margin-right: 30rpx;
}
.delivery-company{
    margin-top: 10rpx;
}
.logistics-content{
    position: relative;
    padding: 0 20rpx 100rpx;
    margin-top: -100rpx;
    z-index: 1;
}
.logistics-content::before{
    content: '';
    position: absolute;
    width: 730rpx;
    height: 30rpx;
    top: -15rpx;
    left: 10rpx;
    background: #C60E40;
    border-radius: 8rpx;
    opacity: 0.44;
}
.logistics-list{
    position: relative;
    background: #fff;
    padding: 35rpx 45rpx 40rpx 40rpx;
    border-radius: 8rpx;
    margin-bottom: 23rpx;
}
.logistics-item{
    position: relative;
    color: #999;
    font-size: 26rpx;
    padding-left: 54rpx;
}
.logistics-item:not(:last-child){
    padding-bottom: 50rpx;
}
.logistics-info{
    line-height: 40rpx;
    margin-bottom: 20rpx;
}
.img-status{
    position: absolute;
    width: 34rpx;
    height: 34rpx;
    top: 5rpx;
    left: 0;
    z-index: 2;
}
.logistics-item .line{
    position: absolute;
    width: 1rpx;
    height: 100%;
    top: 6rpx;
    left: 17rpx;
    background: #eee;
}
.black{
    color: #333;
}
