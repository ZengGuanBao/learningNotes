/**order.wxss**/
.order-container{
    height: 100vh;
}
.channel-tab{
    display: flex;
    height: 118rpx;
    padding: 0 23rpx 30rpx;
    background: #FD4073;
    box-sizing: border-box;

}
.channel-tab .tab-item{
    flex: 1;
    position: relative;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    text-align: center;
    font-size: 26rpx;
    opacity: 0.6;
}
.channel-tab .tab-item.active{
    color: #fff;
    font-weight: 600;
    opacity: 1;
}
.channel-tab .tab-item.active::after{
    content: '';
    position: absolute;
    width: 28rpx;
    height: 4rpx;
    bottom: 14rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 2rpx;
    background: #fff;
}
.order-type-tab{
    position: relative;
    display: flex;
    padding: 8rpx 30rpx 0;
    background: #F7F8FC;
    border-radius: 16rpx 16rpx 0 0;
    margin-top: -30rpx;
    z-index: 1;
}
.order-type-tab .tab-item{
    flex: 1;
    position: relative;
    line-height: 80rpx;
    color: #999;
    text-align: center;
    font-size: 26rpx;
}
.order-type-tab .tab-item.active{
    color: #333;
    font-weight: 600;
}
.order-type-tab .tab-item.active::after{
    content: '';
    position: absolute;
    width: 28rpx;
    height: 4rpx;
    bottom: 17rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 2rpx;
    background:linear-gradient(90deg,rgba(253,42,99,1) 0%,rgba(245,37,77,1) 100%);
}
.tab-content{
    background: #F7F8FC;
    padding: 0 20rpx;
}
.tab-list-content{
    height: calc(100vh - 176rpx);
    padding-bottom: 20rpx;
    box-sizing: border-box;
}
.tab-list-item{
    padding: 0 20rpx 30rpx;
    border-radius: 8rpx;
    background: #fff;
}
.tab-list-item+.tab-list-item{
    margin-top: 20rpx;
}
.order-header{
    display: flex;
    height: 86rpx;
    align-items: center;
    margin-bottom: 10rpx;
}
.img-channel{
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}
.order-no{
    flex: 1;
    color: #999;
    font-size: 26rpx;
    vertical-align: middle;
}
.copy{
    display: inline-block;
    width: 48rpx;
    line-height: 26rpx;
    background:#F7F8FC;
    margin-left: 10rpx;
    border-radius:2px;
    font-size: 20rpx;
    color: #333;
    text-align: center;
    vertical-align: middle;

}
.order-status{
    color: #FD4073;
    font-size: 26rpx;
}
.order-content{
    display: flex;
    padding-right: 13rpx;
    font-size: 26rpx;
    color: #999;
}
.order-content .order-right{
    flex: 1;
    min-width: 0;
    margin-left: 20rpx;
}
.goods-detail{
    color: #333;
    line-height: 40rpx;
    height: 80rpx;
}
.order-time{
    margin: 20rpx 0;
    line-height: 26rpx;
}
.order-pay .money{
    color: #FD4073;
}
.show-all{
    text-align: center;
    margin: 25rpx;
}
.show-all .text{
    position: relative;
    font-size:20rpx;
    color: #ccc;
}
.show-all .text::before, .show-all .text::after{
    content: '';
    position: absolute;
    width: 20rpx;
    height: 1rpx;
    left: -30rpx;
    top: 15rpx;
    background: #ccc;
}
.show-all .text::after{
    left: 148rpx;
}
.order-empty{
    text-align: center;
    padding-top: 120rpx;
}
.img-empty{
    width: 200rpx;
    height: 200rpx;
}
.empty-text{
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    color: #999;
    font-size: 26rpx;
}
.btn-home{
    display: inline-block;
    width: 260rpx;
    text-align: center;
    line-height: 88rpx;
    border-radius: 44rpx;
    border:1px solid #ccc;
    color: #333;
    font-size: 32rpx;
}
