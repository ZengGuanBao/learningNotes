/**recommendList.wxss**/
.classify {
  position: fixed;
  width: 750rpx;
  height: 88rpx;
  background-color: #fff;
  z-index: 2;
  top: 0;
}

.hot-classify {
  margin-top: 20rpx;
  padding: 0 30rpx;
  height: 200rpx;
  overflow: hidden;
}

.hot-item {
  display: inline-block;
  width: 112rpx;
  height: 54rpx;
  border-radius: 27rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 54rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-right: 22rpx;
}

.hot-active {
  background: linear-gradient(90deg, rgba(253, 64, 115, 1) 0%, rgba(255, 59, 96, 1) 100%);
  border-color: transparent;
  color: #fff;
}

.hot-item:nth-of-type(5) {}

.hot-open {
  text-align: center;
}

.arrow-down {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.rotate {
  transform: rotate(180deg);
}

.arrow-text {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 20rpx;
}

.theme-img {
  width: 750rpx;
  height: 320rpx;
}

.time-limit {
  height: 100rpx;
  background-color: #FD4073;
  display: flex;
}

.time-item {
  flex: 1;
  text-align: center;
}

.time {
  margin-top: 17rpx;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 32rpx;
  opacity: 0.6;
}

.state {
  margin-top: 17rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 22rpx;
  opacity: 0.6;
}

.on .time,
.on .state {
  opacity: 1;
}

.commodity-list {
  padding-top: 20rpx;
}

.jd-search {
  width: 750rpx;
  height: 74rpx;
  background: linear-gradient(90deg, rgba(253, 64, 115, 1) 0%, rgba(255, 59, 96, 1) 100%);
  padding-top: 14rpx;
}

.search-bar {
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  border-radius: 8rpx;
  display: flex;
  margin: 0 30rpx;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin: 16rpx 14rpx 16rpx 30rpx;
}

.search-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  line-height: 60rpx;
}

.search-btn {
  float: right;
  background: #FD4073;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
  line-height: 24rpx;
  padding: 8rpx 10rpx;
  margin: 10rpx;
}

.footer-loading {
  height: 88rpx;
  margin: 30rpx 0;
  text-align: center;
}

.loading-more {
  width: 88rpx;
  height: 88rpx;
}

.footer {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #ccc;
  text-align: center;
}

.line {
  display: inline-block;
  width: 20rpx;
  border-bottom: 1px solid #ccc;
  position: relative;
  top: -5rpx;
  margin: 0 10rpx;
}