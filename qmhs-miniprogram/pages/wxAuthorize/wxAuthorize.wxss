/**wxAuthorize.wxss**/
.wx-authorize-container{
    height: 100vh;
    padding: 140rpx 50rpx 0;
    box-sizing: border-box;
    text-align: center;
    background: #fff;
}
.img-logo{
    width: 180rpx;
    height: 180rpx;
}
.logo-text{
    margin-top: 30rpx;
    font-size: 30rpx;
    color: #999;
}
.authorize{
    margin-top: 250rpx;
}
.btn-authorize{
    display: block;
    width: 650rpx!important;
    line-height: 88rpx;
    border-radius: 44rpx;
    padding: 0;
    margin: 0!important;
    background: #4CD362;
}
.btn-authorize text{
    font-size: 32rpx;
    color: #fff;
}
.tip{
    margin-top: 40rpx;
    color: #999;
    font-size: 24rpx;
}
