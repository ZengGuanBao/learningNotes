/**bindInvitees.wxss**/
.bindInvitees-container {
  height: 100vh;
  padding: 120rpx 50rpx 0;
  box-sizing: border-box;
  background-color: #fff;
}
.title {
  font-size: 48rpx;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  margin-bottom: 25rpx;
}
.tips {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 32rpx;
}
.invitees-info {
  height: 346rpx;
  padding-top: 50rpx;
  box-sizing: border-box;
  text-align: center;
}
.invitees-img {
  display: inline-block;
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  overflow: hidden;
}
.invitees-name {
  font-size: 32rpx;
  color: #333;
  line-height: 32rpx;
  margin: 16rpx 0 30rpx;
}
.invitees-info .tip{
  font-size: 24rpx;
  color: #999;
}
.invitees-code {
  position: relative;
  margin-top: 145rpx;
  border-bottom: 1px solid #eee;
}
.invitees-input {
  width:589rpx;
  height: 100rpx;
  font-size: 40rpx;
  color: #333;
}
.delete{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  z-index: 10;
}
.img-delete{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.placeholder-input {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(204, 204, 204, 1);
  line-height: 32rpx;
}
.input-tip {
  margin-top: 24rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(204, 204, 204, 1);
  line-height: 20rpx;
}
.no-code{
  text-align: right;
  margin-top: 20rpx;
  color: #FD2A63;
  font-size: 24rpx;
}
.invitees-btn {
  width: 650rpx;
  height: 88rpx;
  background: linear-gradient(90deg, rgba(253, 64, 115, 1) 0%, rgba(255, 59, 96, 1) 100%);
  border-radius: 44rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  opacity: 0.5;
}
.btn-active {
  opacity: 1;
}
.agree-protocol{
  margin-top: 40rpx;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
}
.agree-protocol .protocol{
  color: #FD4073;
}
