/**confirmOrder.wxss**/
.confirm-order-container{
    height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
    background: #F7F8FC;
}
.order-content{
    position: relative;
}
.address-box, .goods-box, .detail-box{
    position: relative;
    background: #fff;
    border-radius: 8rpx;
    margin-bottom: 23rpx;
}
.address-box{
    position: relative;
    padding: 35rpx 110rpx 46rpx 94rpx;
    color: #333;
    font-size: 26rpx;
}
.img-address{
    position: absolute;
    width: 44rpx;
    height: 44rpx;
    top: 35rpx;
    left: 35rpx;
}
.address-empty{
    color: #333;
    font-size: 32rpx;
}
.user-name, .user-phone{
    display: inline-block;
    max-width: 150rpx;
}
.user-phone{
    margin-left: 30rpx;
}
.detail-address{
    color: #999;
    margin-top: 20rpx;
}
.address-box .icon-arrow{
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    right: 33rpx;
    top: 50%;
    transform: translateY(-50%);
}
.address-box .bottom-line{
    position: absolute;
    width: 687rpx;
    height: 6rpx;
    right: 12rpx;
    bottom: 0;
}
.goods-box{
    display: flex;
    height: 180rpx;
    padding: 40rpx 33rpx 40rpx 20rpx;
    align-items: center;
}
.goods-box .goods-right{
    flex: 1;
    min-width: 0;
    width: 180rpx;
    height: 180rpx;
    margin-left: 20rpx;
}
.goods-detail{
    height: 80rpx;
    font-size: 26rpx;
    color: #333;
    line-height: 40rpx;
    margin-bottom: 52rpx;
}
.goods-price .price{
    position: relative;
    font-size: 34rpx;
    color: #FD4073;
    padding-left: 24rpx;
}
.goods-price .price::after{
    content: 'ï¿¥';
    position: absolute;
    top: 10rpx;
    left: 0;
    color: #FD4073;
    font-size: 24rpx;
}
.detail-box{
    padding: 0 40rpx;
}
.detail-box .line{
    display: flex;
    height: 90rpx;
    align-items: center;
    color: #999;
    font-size: 26rpx;
}
.detail-box .line+.line{
    border-top: 1rpx solid #eee;
}
.detail-box .line-right{
    color: #333;
    margin-left: 30rpx;
}
.detail-box .price{
    color: #FD4073;
}
.order-footer{
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 2;
    background: #fff;
}
.order-footer .wrapper{
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 80rpx;
    padding: 15rpx 30rpx 15rpx 20rpx;
}
.order-footer .btn-confirm{
    padding: 0 50rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 40rpx;
    font-size: 32rpx;
    font-weight:600;
    background:linear-gradient(90deg,rgba(253,64,115,1) 0%,rgba(255,59,96,1) 100%);
    color: #fff;
}
.order-footer .protocol{
    flex: 1;
}
.img-agree{
    width: 22rpx;
    height: 22rpx;
    margin-right: 10rpx;
    margin-left: 20rpx;
}
.agree-text{
    color: #666;
    font-size: 26rpx;
}
.member-protocol-name {
    margin-top: 8rpx;
    color: #FD4073;
    font-size: 20rpx;
    line-height: 1;
}
